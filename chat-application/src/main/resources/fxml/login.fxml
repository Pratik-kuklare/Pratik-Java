<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatapp.client.LoginController">
   <children>
      <Label styleClass="title" text="Chat Application" />
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Login">
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                        <Button fx:id="loginButton" onAction="#handleLogin" styleClass="primary-button" text="Login" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Register">
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
                        <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
                        <Button fx:id="registerButton" onAction="#handleRegister" styleClass="primary-button" text="Register" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <Label fx:id="statusLabel" styleClass="status-label" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>